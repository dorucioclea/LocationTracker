@model User

@using (Html.BeginForm())
{
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Emailadres</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Wachtwoord</label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control" />
            @Html.ValidationMessage("invalid-login")
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}