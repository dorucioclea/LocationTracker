@model Location
@{
    ViewData["Title"] = "Samenvoegen";
}
<h3>Locatie samenvoegen</h3>
@using (Html.BeginForm())
{
<fieldset>
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Locatie</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Label">
        </div>
    </div>
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Samenvoegen in</label>
        <div class="col-sm-10">
            <select name="locationId" asp-items="ViewBag.LocationOptions" class="form-control"></select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
</fieldset>
}
