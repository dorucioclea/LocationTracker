@model Location
@{
    ViewData["Title"] = "Wijzig locatie";
}
<h3>Locatie wijzigen</h3>
@using (Html.BeginForm())
{
<fieldset>
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Label</label>
        <div class="col-sm-10">
            <input asp-for="Label" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Latitude</label>
        <div class="col-sm-10">
            <input asp-for="Latitude" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">Longitude</label>
        <div class="col-sm-10">
            <input asp-for="Longitude" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
</fieldset>
}
<br /><br />
<partial name="_MapPartial" model="new MapData { Latitude = Model.Latitude, Longitude = Model.Longitude }" />