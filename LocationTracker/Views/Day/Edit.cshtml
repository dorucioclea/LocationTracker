@model Day
@{
    ViewData["Title"] = "Wijzig dag";
}
<h3>Dag wijzigen</h3>
@using (Html.BeginForm())
{
    <fieldset>
        <div class="form-group row">
            <label for="location" class="col-sm-2 col-form-label">Locatie</label>
            <div class="col-sm-10">
                <select asp-for="LocationId" asp-items="ViewBag.LocationOptions" class="form-control"></select>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Opslaan</button>
    </fieldset>
}
